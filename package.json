{
  "name": "@everhoof/im_everhoof_api",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "description": "API for Everhoof Instant Messaging system",
  "repository": "git@github.com:everhoof/im_everhoof_api.git",
  "author": {
    "name": "Svyatoslav Fyodorov",
    "email": "intelrug@gmail.com",
    "url": "https://github.com/intelrug"
  },
  "keywords": [
    "everhoof",
    "radio",
    "chat",
    "im",
    "messenger"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"*.{ts,js,json}\" \"database/**/*.{ts,js,json}\" \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js,json}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,database,scripts,test}/**/*.{ts,js}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "orm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -c cli",
    "seed:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -c seed migration:create",
    "seed:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -c seed migration:run",
    "seed:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -c seed migration:revert",
    "predeploy": "yarn build",
    "deploy": "node scripts/deploy.js"
  },
  "dependencies": {
    "@intelrug/nestjs-graphql-dataloader": "^0.1.1",
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.5.5",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/platform-socket.io": "^7.5.4",
    "@nestjs/schedule": "^0.4.0",
    "@nestjs/typeorm": "^7.0.0",
    "apollo-server-express": "^2.15.1",
    "apollo-server-testing": "^2.15.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "dataloader": "^2.0.0",
    "file-type": "^16.3.0",
    "form-data": "^3.0.0",
    "fs-extra": "^9.0.1",
    "gm": "^1.23.1",
    "got": "^11.8.0",
    "graphql": "14.7.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^6.0.13",
    "handlebars": "^4.7.7",
    "image-size": "^0.9.7",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "multer": "^1.4.2",
    "nest-access-control": "^2.0.2",
    "nodemailer": "^6.5.0",
    "passport": "^0.4.1",
    "passport-anonymous": "^1.0.1",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.28",
    "typescript": "^4.2.3",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.3.2",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^9.0.3",
    "@types/gm": "^1.18.9",
    "@types/jest": "^26.0.4",
    "@types/lodash": "^4.14.165",
    "@types/luxon": "^1.25.0",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.0.23",
    "@types/nodemailer": "^6.4.1",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-http-bearer": "^1.0.35",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.2",
    "ts-loader": "^8.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
